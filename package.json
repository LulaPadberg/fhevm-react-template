{
  "name": "universal-fhevm-sdk-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Universal FHEVM SDK - Framework-agnostic toolkit for building confidential frontends",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter='@fhevm/universal-sdk' build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "showcase": "pnpm --filter nextjs-showcase dev"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "zama",
    "blockchain",
    "sdk",
    "react",
    "vue",
    "nextjs"
  ],
  "author": "Secure Insurance Platform",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
